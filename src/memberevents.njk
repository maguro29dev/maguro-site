<script>
document.addEventListener('DOMContentLoaded', () => {
    const captureButtons = document.querySelectorAll('.capture-event-btn');
    
    captureButtons.forEach(button => {
        button.addEventListener('click', () => {
            const index = button.id.split('-').pop();
            const targetElement = document.getElementById(`current-event-capture-area-${index}`);

            if (targetElement && typeof html2canvas === 'function') {
                const originalButtonContent = button.innerHTML;
                button.innerHTML = '...';
                button.disabled = true;
                button.style.display = 'none';

                targetElement.classList.add('screenshot-mode');

                setTimeout(() => {
                    html2canvas(targetElement, {
                        useCORS: true,
                        backgroundColor: null,
                        scale: 2,
                        allowTaint: true,
                        ignoreElements: (element) => element.classList.contains('capture-event-btn')
                    }).then(canvas => {
                        const link = document.createElement('a');
                        const title = targetElement.querySelector('h3').textContent.trim() || 'event_info';
                        link.download = `${title.replace(/\s+/g, '_')}.png`;
                        link.href = canvas.toDataURL('image/png');
                        link.click();
                    }).finally(() => {
                        targetElement.classList.remove('screenshot-mode');
                        button.innerHTML = originalButtonContent;
                        button.disabled = false;
                        button.style.display = 'flex';
                    });
                }, 100);
            }
        });
    });
});
</script>

