<script>
document.addEventListener('DOMContentLoaded', () => {
    const captureButton = document.getElementById('capture-event-btn');
    const targetElement = document.getElementById('current-event-capture-area');

    if (captureButton && targetElement && typeof html2canvas === 'function') {
        captureButton.addEventListener('click', () => {
            const originalButtonContent = captureButton.innerHTML;
            captureButton.innerHTML = '...';
            captureButton.disabled = true;
            captureButton.style.display = 'none';

            targetElement.classList.add('screenshot-mode');

            setTimeout(() => {
                html2canvas(targetElement, {
                    useCORS: true,
                    backgroundColor: null,
                    scale: 2,
                    allowTaint: true,
                    ignoreElements: (element) => element.id === 'capture-event-btn'
                }).then(canvas => {
                    const link = document.createElement('a');
                    const title = targetElement.querySelector('h3').textContent.trim() || 'event_info';
                    link.download = `${title.replace(/\s+/g, '_')}.png`;
                    link.href = canvas.toDataURL('image/png');
                    link.click();
                }).finally(() => {
                    targetElement.classList.remove('screenshot-mode');
                    captureButton.innerHTML = originalButtonContent;
                    captureButton.disabled = false;
                    captureButton.style.display = 'flex';
                });
            }, 100);
        });
    }
});
</script>